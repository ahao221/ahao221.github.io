---
import Default from '@astrojs/starlight/components/SocialIcons.astro';
---

<!-- 添加Nexus Mods自定义图标 -->
<a href="https://next.nexusmods.com/profile/Ahao221" rel="me" class="sl-flex">
  <span class="sr-only">Nexus Mods</span>
  <img 
    src="/nexus.ico" 
    alt="Nexus Mods" 
    width="16" 
    height="16" 
    aria-hidden="true"
  />
</a>

<!-- 渲染默认社交图标（Discord） -->
<Default {...Astro.props}><slot /></Default>

<!-- 添加样式以匹配默认链接外观 -->
<style>
  a {
    color: var(--sl-color-text-accent);
    margin: -0.5em;
    padding: 0.5em;
    display: flex;
    align-items: center;
  }

  a:hover {
    opacity: 0.66;
  }

  img {
    width: 16px;
    height: 16px;
  }
</style> 